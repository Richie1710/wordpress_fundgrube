{
    "name": "fundgrube/wordpress-plugin",
    "description": "WordPress-Plugin zur Verwaltung von FundstÃ¼cken mit Bildern und Metadaten",
    "type": "wordpress-plugin",
    "version": "1.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Ihr Name",
            "email": "ihre-email@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Fundgrube\\": "includes/"
        },
        "classmap": [
            "includes/",
            "admin/",
            "public/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fundgrube\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress-Core .",
        "cbf": "phpcbf --standard=WordPress-Core .",
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "wordpress-install-dir": "wordpress"
    }
}
